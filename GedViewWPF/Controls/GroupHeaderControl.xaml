<UserControl x:Class="GedViewWPF.Controls.GroupHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:GedViewWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="20
             " d:DesignWidth="100">

    <Grid>
        <Border BorderBrush="SteelBlue" BorderThickness="0,1 ">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="1,1 ">
                    <GradientStop Color="White" />
                    <GradientStop Color="LightSteelBlue" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>

            <TextBlock Margin ="2" Text="{Binding Header}" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
        </Border>
    </Grid>
</UserControl>
